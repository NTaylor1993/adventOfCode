{
    "editor.formatOnSave": true,
    "emeraldwalk.runonsave": {
        "commands": [
            {
                "cmd": "${workspaceFolder}/node_modules/.bin/prettier --write ${file} --config .prettierrc",
                "match": ".(cls|cmp|eslintrc|evt|js|ts|json|html|trigger|xml)"
            }
        ]
    }
}
